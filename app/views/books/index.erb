<h1>Book感想掲示板</h1>
<div>
  <%= form_with model: @book, url: book_path, method: :post do |f| %>
    <table>
      <tbody>
        <tr>
          <td><%= f.label :title, 'タイトル' %></td>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <td><%= f.label :body, '紹介文' %></td>
          <td><%= f.text_area :body %></td>
        </tr>
        <tr>
          <td><%= f.label :name, 'タグ' %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit :投稿 %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>No</th>
        <th>本のタイトル</th>
        <th>紹介文</th>
        <th>タグ</th>
      </tr>
    </thead>
    <tbody>
      <%= @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.body %></td>
          <td>
            <%= book.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>